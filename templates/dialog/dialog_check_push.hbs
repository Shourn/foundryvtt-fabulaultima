<section class="bonds">
    {{#each bonds}}
        <div>
            <label>
                <input type="radio" name="bond" value="{{@index}}">
                <span class="bond">
                    <span>{{localize 'FABULA_ULTIMA.dialog.push.bond'}}</span>
                    {{#each this.feelings}}
                        <strong>{{localize (concat 'FABULA_ULTIMA.feeling.' this)}}</strong>
                        {{#unless @last}}<span>{{localize 'FABULA_ULTIMA.dialog.push.and'}}</span>{{/unless}}
                    {{/each}}
                    <span>{{{localize 'FABULA_ULTIMA.dialog.push.with' with=(concat '<strong>' this.with '</strong>')}}}</span>
                    <span>({{this.strength}})</span>
                </span>
            </label>
        </div>
    {{/each}}
</section>
<hr>