<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{object.img}}" data-edit="img" title="{{object.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{object.name}}" placeholder="{{ localize 'Name' }}"/></h1>
    </header>
    <hr/>
    <section class="form-group">
        <fieldset class="form-fields">
            <label>{{localize 'FABULA_ULTIMA.sheet.skill.level'}}</label>
            <input type="number" name="level" value="{{object.level}}" min="0" max="{{object.maxLevel}}">
            <span class="sep">/</span>
            <input type="number" name="maxLevel" value="{{object.maxLevel}}" min="1">
        </fieldset>
    </section>
    <section>
        <a class="fas fa-plus" data-type="advancement" data-action="add"></a>
    </section>
    <section class="form-group">
        {{#each object.advancement}}
            <fieldset class="form-fields" data-advancement-id="{{this.id}}">
                <span>{{this.type}}</span>
                <span>
                    <a data-type="advancement" data-action="edit"><i class="fas fa-edit"></i></a>
                    <a data-type="advancement" data-action="delete"><i class="fas fa-trash"></i></a>
                </span>
            </fieldset>
        {{/each}}
    </section>
    <nav class="sheet-tabs tabs">
        <a class="item">{{localize 'FABULA_ULTIMA.description'}}</a>
    </nav>
    <section class="form-group-stacked">
        <fieldset class="form-fields">
            {{editor enrichedHtml.description target='description' engine="prosemirror" button=true}}
        </fieldset>
    </section>
</form>
